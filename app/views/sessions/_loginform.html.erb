<% provide(:title, 'Log in') %>

<h1 class='header-title'>Log in</h1>

<div class='row'>
  <div class='offset-md-3 col-md-6'>

    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mb-5' %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      <%= f.submit 'Log in', class: 'btn btn-md btn-primary ml-auto' %>
    <% end %>

    <p><%= link_to "Sign up now", signup_path , class: 'btn btn-md btn-success w-100'%></p>
  </div>
</div>
